BoxLayout:
    orientation: 'vertical'
    padding: 10
    spacing: 10

    BoxLayout:
        orientation: 'horizontal'

        TextInput:
            id: input_miles
            text: '34'
            font_size: 48
            multiline: False
            on_text: app.convert_miles_to_km()

        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.25

            Button:
                text: 'Up'
                on_press: app.change_miles_value(1)

            Button:
                text: 'Down'
                on_press: app.change_miles_value(-1)

    Button:
        text: 'Convert miles to km'
        font_size: 24
        on_press: app.convert_miles_to_km()

    Label:
        id: output_label
        font_size: 48
        text: '54.717'
        color: (1, 1, 0, 1)
